{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block header %}
    <h2 class='text-white'>ETYH</h2>
{% endblock %}
{% block body %}
    <form method="post">
        <h1 class='text-white'>Access to  the application</h1>
        {% if error %}
            <p class='alert alert-danger'>{{error.message}}</p>
        {% endif %}
        <label for='_username'>
        <h6 class='text-white'>Username: </h6>
        <input type="text" {% if error %} value={{ lastUsername }} {% endif %} name="_username" placeholder="User" required {% if not error %} autofocus {% endif %}>
        </label>
        <label for='_password'>
        <h6 class='text-white'>Password: </h6>
        <input type="password" name="_password" placeholder="Password" {% if error %} autofocus {% endif %}>
        </label>
        <button type="submit">Log in</button>
    </form>
{% endblock %}